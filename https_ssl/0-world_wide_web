#!/usr/bin/env bash
# Script to check DNS records for subdomains of a given domain

domain=$1
subdomain=$2

check_record() {
    record=$(dig +short "$1.$domain")
    if [ -n "$record" ]; then
        echo "The subdomain $1 is an A record and points to $record"
    else
        echo "No record found for $1.$domain"
    fi
}

if [ -z "$domain" ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

if [ -n "$subdomain" ]; then
    check_record "$subdomain"
else
    for sub in www lb-01 web-01 web-02; do
        check_record "$sub"
    done
fi
